{
    "name": "sylweriusz/sacy",
    "type": "library",
    "version": "1.0.1",
    "description": "Smarty asset compiler",
    "homepage": "https://github.com/sylweriusz/sacy",
    "license": "MIT",
    "authors": [
        {
            "name": "Philip Hofstetter",
            "homepage": "https://blog.pilif.me/"
        }
    ],
    "autoload": {
        "classmap": ["src/"],
        "psr-4": {
            "sacy\\": "src/sacy"
        }
    },
    "require": {
        "php": "^7.1",
        "ext-json": "*",
        "mrclay/jsmin-php": "^2.4",
        "scssphp/scssphp": "^1.1",
        "leafo/lessphp": "^0.5.0",
        "tubalmartin/cssmin": "^4.1"
    },
    "suggest": {
        "coffeescript/coffeescript": "Built-in CoffeeScript compilation",
        "ext-sassphp": "use libsass for native sass compilation",
        "ext-pdo_sqlite": "cache dependencies for a significant speedup"
    }
}
